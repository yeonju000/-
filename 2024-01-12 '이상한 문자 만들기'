#include <string>
#include <vector>

using namespace std;

string solution(string s) {
    
    int index = 0;
    string answer = "";
    
    for(int i=0; i<s.size(); i++) {
        if(s[i] == ' ') {
            answer += s[i];
            index = 0;
        }
        else {
            if(index%2==0) {
                answer += toupper(s[i]);
            }
            else {
                answer += tolower(s[i]);
            }
            index ++;
        }
    }    
    return answer;
}
